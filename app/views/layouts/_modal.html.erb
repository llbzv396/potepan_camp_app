<!-- LOGIN MODAL -->
<div class="modal fade login-modal" id="login" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">ログイン</h3>
      </div>
      <div class="modal-body">
        <%= form_tag('/potepan/unfinished', role: 'form') do %>
          <div class="form-group">
            <%= label_tag 'メールアドレス' %>
            <%= text_field_tag :email, '', { class: 'form-control', id: 'login-email'} %>
          </div>
          <div class="form-group">
            <%= label_tag 'パスワード' %>
            <%= text_field_tag :password, '', { class: 'form-control', id: 'login-password'} %>
          </div>
          <div class="checkbox">
            <%= label_tag '' %>
            <%= check_box_tag :checkbox %>
            パスワードを保存
          </div>
          <button type="submit" class="btn btn-primary btn-block">ログイン</button>
          <button type="submit" class="btn btn-link btn-block">パスワードを忘れた場合</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- SIGN UP MODAL -->
<div class="modal fade" id="signup" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">新規作成</h3>
      </div>
      <div class="modal-body">
        <%= form_tag('/potepan/unfinished', role: 'form') do %>
          <div class="form-group">
            <%= label_tag 'メールアドレス' %>
            <%= text_field_tag :email, '', { class: 'form-control', id: 'signyp-email'} %>
          </div>
          <div class="form-group">
            <%= label_tag 'パスワード' %>
            <%= text_field_tag :password, '', { class: 'form-control', id: 'signup-password'} %>
          </div>
          <div class="form-group">
            <%= label_tag 'パスワードの確認' %>
            <%= text_field_tag :password, '', { class: 'form-control', id: 'signup-password-confirmation'} %>
          </div>
          <button type="submit" class="btn btn-primary btn-block">新規登録</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- PORDUCT QUICK VIEW MODAL -->
<div class="modal fade quick-view" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="media">
          <div class="media-left">
            <%= image_tag("img/products/quick-view/quick-view-01.jpg", :class => "media-object", :alt => "Image") %>
          </div>
          <div class="media-body">
            <h2>サンプル商品名</h2>
            <h3>値段</h3>
            <p>説明</p>
            <span class="quick-drop">
              <select name="guiest_id3" id="guiest_id3" class="select-drop">
                <option value="0">S</option>
                <option value="1">M</option>
                <option value="2">L</option>
              </select>
            </span>
            <div class="btn-area">
              <a href="potepan/unfinished" class="btn btn-primary btn-block">カートに追加<i class="fa fa-angle-right" aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
