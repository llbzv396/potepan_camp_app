<div class="panel panel-default">
  <div class="panel-heading">カテゴリかブランドで絞り込み</div>
  <div class="panel-body">
    <div class="collapse navbar-collapse navbar-ex1-collapse navbar-side-collapse">
      <ul class="nav navbar-nav side-nav">
        <% taxonomies.each do |taxonomy| %>
        <li>
          <a href="javascript:;" data-toggle="collapse" data-target="#<%= taxonomy.id %>">
            <%= taxonomy.name %><i class="fa fa-plus"></i>
          </a>
          <ul id="<%= taxonomy.id %>" class="collapse collapseItem">
            <li>
              <%= link_to potepan_category_path(taxonomy.root.id) do %>
                <i class="fa fa-caret-right" aria-hidden="true"></i>
                全て <span>(<%= Spree::Product.in_taxon(taxonomy.root).count %>)</span>
              <% end %>
            </li>
            <% taxonomy.root.leaves.each do |taxon| %>
            <li>
              <%= link_to potepan_category_path(taxon.id) do %>
                <i class="fa fa-caret-right" aria-hidden="true"></i>
                <%= taxon.name %> <span>(<%= taxon.products.count %>)</span>
              <% end %>
            </li>
            <% end %>
          </ul>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
