<div class="col-xs-12">
  <div class="media">
    <div class="media-left">
      <%= image_tag product.display_image.attachment.url(:product), :class => "media-object", :alt => product.name %>
      <span class="maskingImage"><a data-toggle="modal" href=".quick-view" class="btn viewBtn">Quick View</a></span>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= link_to product.name, potepan_product_path(product) %></h4>
      <p><%= product.description %></p>
      <h3><%= (product.price * 110).to_i %>å††</h3>
      <div class="btn-group" role="group">
        <%= link_to potepan_unfinished_path, class: 'btn btn-default' do %>
          <button type="button" class="btn btn-default"><i class="fa fa-heart" aria-hidden="true"></i></button>
        <% end %>
        <%= link_to potepan_orders_path(id: product.id ), method: :post do %>
          <button type="button" class="btn btn-default"><i class="fa fa-shopping-cart" aria-hidden="true"></i></button>
        <% end %>
      </div>
    </div>
  </div>
</div>
