<% provide(:title, "ログイン") %>
<div class=text-center>
  <h1>ログイン</h1>
  <div class="container">
    <%= form_for(:session, url: potepan_login_path) do |f| %>
      <div class="form-group">
        <%= f.label :メール %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
    <% end %>
    <p id='signup_confirmation'>新規登録は <%= link_to "こちらから", new_potepan_user_path %></p>
  </div>
</div>
